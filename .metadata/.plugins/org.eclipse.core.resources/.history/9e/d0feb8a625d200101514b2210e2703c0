package com.rpae.source_service.service;

import java.util.Arrays;
import java.util.List;

import org.springframework.http.ResponseEntity;
import org.springframework.stereotype.Service;
import org.springframework.web.client.RestTemplate;

import com.rpae.common_lib.DTOs.source.CryptoCoinDTO;
import com.rpae.common_lib.common.Constants;
import com.rpae.source_service.model.Source;
import com.rpae.source_service.repository.SourceRepository;

import lombok.RequiredArgsConstructor;

@Service
@RequiredArgsConstructor
public class SourceService {

	private final SourceRepository repo;
	private RestTemplate restTemplate;

	public List<Source> getAll() {
		return repo.findAll();
	}

	public Source save(Source s) {
		return repo.save(s);
	}

	public List<CryptoCoinDTO> getAllCryptoCoins(String cryptoApiUrl) {
		ResponseEntity<CryptoCoinDTO[]> cryptoResponse = restTemplate.getForEntity(url, CryptoCoinDTO[].class);
		return Arrays.asList(cryptoResponse.getBody());
	}

}
